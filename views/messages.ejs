<!DOCTYPE html>
<html>
  <head>
    <title>Messages</title>
    <style>
      table {
        width: 100%;
        border-collapse: collapse;
      }
      th,
      td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
        border-right: 1px solid #ddd;
      }
      th {
        background-color: #f2f2f2;
      }
      .navbar {
        background-color: #333;
        overflow: hidden;
      }
      .navbar a {
        float: left;
        display: block;
        color: white;
        text-align: center;
        padding: 14px 20px;
        text-decoration: none;
      }
      .navbar a:hover {
        background-color: #ddd;
        color: black;
      }
    </style>
  </head>
  <body>
    <div class="navbar">
      <a href="/admin">Home</a>
      <a href="/admin/updateProduct">Update Product</a>
      <a href="/admin/clients">View Clients</a>
      <a href="/admin/messages">View Messages</a>
      <a href="/admin/delete">Delete Product</a>
    </div>
    <table>
      <thead>
        <tr>
          <th>Message ID</th>
          <th>Sender</th>
          <th>Sender email</th>
          <th>Message Content</th>
          <th>Sender phone number</th>
        </tr>
      </thead>
      <tbody>
        <!-- BEGIN: Loop through the messages object and display each message -->
        <% messages.forEach(function(message) { %>
        <tr>
          <td><%= message.id %></td>
          <td><%= message.name %></td>
          <td><%= message.email %></td>
          <td><%= message.message %></td>
          <td><%= message.phone %></td>
        </tr>
        <% }); %>
        <!-- END: Loop through the messages object -->
      </tbody>
    </table>
  </body>
</html>
